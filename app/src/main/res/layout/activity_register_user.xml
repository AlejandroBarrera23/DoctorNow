<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".view.RegisterUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- T칤tulo -->
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游댳 Registro de Paciente 游댳"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/medical_blue_dark"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:textAlignment="center"/>

        <!-- Selector de Tipo de Identificaci칩n -->
        <Spinner
            android:id="@+id/spinner_id_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/id_types"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de N칰mero de Identificaci칩n -->
        <EditText
            android:id="@+id/et_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="N칰mero de Identificaci칩n"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Nombres -->
        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Apellidos -->
        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Fecha de Nacimiento -->
        <EditText
            android:id="@+id/et_birth_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Nacimiento (DD/MM/AAAA)"
            android:inputType="date"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Correo Electr칩nico -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electr칩nico"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Celular -->
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="N칰mero de Celular"
            android:inputType="phone"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Contrase침a -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contrase침a"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Campo de Confirmar Contrase침a -->
        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar Contrase침a"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Bot칩n de Registro -->
        <Button
            android:id="@+id/btn_register_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:backgroundTint="@color/medical_blue_dark"
            android:textColor="@android:color/white"
            android:padding="12dp"/>

        <!-- Bot칩n para Regresar al Principal -->
        <Button
            android:id="@+id/btn_admin_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:backgroundTint="@color/medical_blue_light"
            android:textColor="@android:color/white"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
